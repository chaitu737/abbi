<div class="text-center">
  <h2 style="background-color:#503219; color:#fff; padding:10px; max-width:100%">Membership Prices</h2>
</div>
<div class="container" style="background-color: #d8ceb9;height:100%;width:90%;padding: 10px;" ng-init="priceAdmin()">
  <div class="row"> <br />
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <button class="btn btn-color" type="button" data-toggle="modal" data-target="#newmembershipprice">New Membership</button>
    </div>
  </div>
  <div id="newmembershipprice" class="modal fade" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">New Membership</h4>
        </div>
        <div class="modal-body">
          <div class="container" style="background-color: white;height:100%;width:90%;padding: 10px;">
            <form>
              <label>New Membership Signup<input type="checkbox" ng-model="nmp.NewMembership" ng-true-value="{{ 1 | json }}" ng-false-value="{{ 0 | json }}"></label>
              <br>
              <label>Membership Year</label>
              <input class="form-control" type="text" ng-model="nmp.MembershipYear">
              <label>Membership Type</label>
              <input class="form-control" type="text" ng-model="nmp.Type">
              <label>Membership Description</label>
              <input class="form-control" type="text" ng-model="nmp.Description">
              <label>Membership Price ($)</label>
              <input class="form-control" type="text" ng-model="nmp.Price">
              <br>
              <button class="btn btn-color" ng-click="NewMemberPrice(nmp)">Save</button>
            </form>
          </div>
        </div>
        <div class="modal-footer">
        </div>
      </div>
    </div>
  </div>
  <div class="panel panel-default">
    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-striped table-bordered nowrap" datatable="ng" dt-options="vm.dtOptions" dt-instance="vm.dtInstance" width="100%">
          <thead>
            <tr>
              <th>Membership Type</th>
              <th>Price ($)</th>
              <th>Year </th>
              <th>Edit </th>
            </tr>
          </thead>
          <tbody>
            <tr ng-repeat="pa in pas">
              <td><span ng-bind="pa.Type"></span></td>
              <td><span ng-bind="pa.Price | currency"></span></td>
              <td><span ng-bind="pa.MembershipYear"></span></td>
              <td>
                <i title="Edit" class="btn btn-warning fa fa-edit" ng-click="tableMembershipprice(pa)"></i>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="container" style="background-color: white;height:100%;width:90%;padding: 10px;" ng-show="editpricetable">
    <form>
      <label>New Membership Signup<input type="checkbox" ng-model="ump.NewMembership" ng-true-value="{{ 1 | json }}" ng-false-value="{{ 0 | json }}"></label>
      <br>
      <label>Membership Year</label>
      <input class="form-control" type="text" ng-model="ump.MembershipYear">
      <label>Membership Type</label>
      <input class="form-control" type="text" ng-model="ump.Type">
      <label>Membership Description</label>
      <input class="form-control" type="text" ng-model="ump.Description">
      <label>Membership Price ($)</label>
      <input class="form-control" type="text" ng-model="ump.Price">
      <br>
      <button class="btn btn-color" ng-click="UpdateMemberPrice(ump)">Save</button>
      <button class="btn btn-color" ng-click="editpricetable = false">Exit</button>
    </form>
  </div>
</div>