<div class="text-center">
  <h2 style="background-color:#503219; color:#fff; padding:10px; max-width:100%">Events Roster</h2>
</div>
<div class="container" style="background-color: #d8ceb9;height:100%;width:90%;padding: 10px;">
  <div class="row"> <br />
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <label>Select an Event:</label>
      <select ng-model="roaster.EventID" ng-click="eventIDDropdown()" ng-change="RoasterEventList(roaster)">
        <option ng-repeat="eveid in eveids" value="{{eveid.EventID}}">{{eveid.Event}}</option>
      </select>
      <button type="submit" class="btn btn-color" ng-click="AllEventIDDropdown()">Show All</button>
      <button type="button" class="btn btn-color" data-toggle="modal" data-target="#roastermodal" ng-click="AdditionalInfoRoaster(roaster)">Additional Information</button>
    </div>
  </div>
  <div class="panel panel-default">
    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-striped table-bordered nowrap" datatable="ng" dt-options="vm.dtOptions" dt-instance="vm.dtInstance" width="100%">
          <thead>
            <tr>
              <th>Member No</th>
              <th>Name</th>
              <th> RegNo </th>
              <th>Animal </th>
              <th>Desc </th>
              <th>Herd#</th>
              <th>Del </th>
              <th>Status </th>
              <th>EID </th>
              <th>Misc </th>
              <th>Owner / Partner</th>
              <th>Owner Phone </th>
              <th>Owner Contact</th>
              <th>Transporter </th>
              <th>Trans. Phone</th>
            </tr>
          </thead>
          <tbody>
            <tr ng-repeat="roasterevent in roasterevents">
              <td><span ng-bind="roasterevent.MemberNumber"></span></td>
              <td><span ng-bind="roasterevent.MemberName"></span></td>
              <td><a href="#!editanimals/{{roasterevent.RegNo}}"><span ng-bind="roasterevent.RegNo"></span></a></td>
              <td><span ng-bind="roasterevent.Animal"></span></td>
              <td><span ng-bind="roasterevent.Description"></span></td>
              <td><span ng-bind="roasterevent.PrivateHerd"></span></td>
              <td><span ng-bind="roasterevent.Deliver"></span></td>
              <td><span ng-bind="roasterevent.Status"></span></td>
              <td><span ng-bind="roasterevent.EID"></span></td>
              <td><span ng-bind="roasterevent.misc"></span></td>
              <td><span ng-bind="roasterevent.OwnerPartner"></span></td>
              <td><span ng-bind="roasterevent.OwnerPhone"></span></td>
              <td><span ng-bind="roasterevent.OwnerEmailFax"></span></td>
              <td><span ng-bind="roasterevent.Transporter"></span></td>
              <td><span ng-bind="roasterevent.TransporterPhone"></span></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<div class="modal fade" id="roastermodal" role="dialog">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Additional Event Entry Information</h4>
      </div>
      <div class="modal-body">
        <div class="panel panel-default">
          <div class="panel-body">
            <div class="table-responsive">
              <table class="table table-striped table-bordered nowrap" datatable="ng" dt-options="vm.dtOptions" dt-instance="vm.dtInstance" width="100%">
                <thead>
                  <tr>
                    <th>RegNo</th>
                    <th>Animal</th>
                    <th ng-if="buck.category=='Classic'">Buck Once</th>
                    <th>Owner / Partner</th>
                    <th>Owner Phone</th>
                    <th>Owner Email / Fax</th>
                    <th>Transporter</th>
                    <th>Transporter Phone</th>
                  </tr>
                </thead>
                <tbody>
                  <tr ng-repeat="addeventinfo in addeventinfos">
                    <td><span ng-bind="addeventinfo.Regno"></span></td>
                    <td><span ng-bind="addeventinfo.Animal"></span></td>
                    <td ng-if="buck.category=='Classic'">
                      <input type="checkbox" ng-model="addeventinfo.buckonce">
                    </td>
                    <td>
                      <input type="text" ng-model="addeventinfo.OwnerPartner">
                    </td>
                    <td>
                      <input type="text" ng-model="addeventinfo.OwnerPhone">
                    </td>
                    <td>
                      <input type="text" ng-model="addeventinfo.OwnerEmailFax">
                    </td>
                    <td>
                      <input type="text" ng-model="addeventinfo.Transporter">
                    </td>
                    <td>
                      <input type="text" ng-model="addeventinfo.TransporterPhone">
                    </td>
                  </tr>
                </tbody>
              </table>
              <button type="button" class="btn btn-color" ng-click="SaveAddInfo(addeventinfos,roaster);">Save</button>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
      </div>
    </div>
  </div>
</div>